<body>
  <h1>Product Price Comparison Tool</h1>
  <p>Enter a product name to compare prices across multiple websites:</p>
  <input type="text" id="searchTerm" placeholder="e.g. iPhone 15, AirPods Pro">
  <br>
  <button onclick="searchProduct()">Compare Prices</button>

  <div class="site-list" id="links"></div>

  <script>
    function searchProduct() {
      const query = encodeURIComponent(document.getElementById('searchTerm').value.trim());
      if (!query) {
        alert('Please enter a product name.');
        return;
      }

      const sites = {
        'Amazon': `https://www.amazon.com/s?k=${query}`,
        'eBay': `https://www.ebay.com/sch/i.html?_nkw=${query}`,
        'Walmart': `https://www.walmart.com/search?q=${query}`,
        'Best Buy': `https://www.bestbuy.com/site/searchpage.jsp?st=${query}`,
        'AliExpress': `https://www.aliexpress.com/wholesale?SearchText=${query}`,
        'Shopee': `https://shopee.tw/search?keyword=${query}`,
        'Rakuten': `https://search.rakuten.co.jp/search/mall/${query}/`
      };

      const linksContainer = document.getElementById('links');
      linksContainer.innerHTML = '';

      for (const [name, url] of Object.entries(sites)) {
        const link = document.createElement('a');
        link.href = url;
        link.target = '_blank';
        link.textContent = `Search on ${name}`;
        linksContainer.appendChild(link);
      }
    }
  </script>
</body>
